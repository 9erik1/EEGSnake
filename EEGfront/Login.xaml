<Window x:Class="EEGfront.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EEGfront"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding TrainToggle}">
            <TextBlock Margin="10" FontSize="20">HON of New Earth</TextBlock>
            <TextBox Height="30" Width="200" Text="{Binding User}"></TextBox>
            <TextBox Height="30" Width="200" Text="{Binding Pass}"></TextBox>
            <Button Command="{Binding OptionChanged}" Margin="10" Click="Button_Click">Login</Button>
            <TextBlock TextWrapping="Wrap" Height="30" Width="200" Text="{Binding Err}"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
